<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= link_to "Novo post", new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>

  <div class="my-4">
    <% @total_pages.times do |page| %> 
      <%= link_to page + 1, posts_path(page: page), class: "py-2 px-3 text-black #{page == @current_page ? "bg-blue-500" : "bg-white"} border border-gray-300 hover:bg-gray-100 hover:text-gray-700" %>
    <% end %>
  </div>

  <%= render "form", post: @post %>
</div>
